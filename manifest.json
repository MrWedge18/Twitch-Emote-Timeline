{
    "name": "Twitch Emote Timeline",
    "version": "1.0.0",
    "description": "Emote Timeline Visualization for Twitch",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation",
        "*://www.twitch.tv/videos/*",
        "*://twitchemotes.com/*"
    ],
    "background": {
        "scripts": [
            "js/bundle.js",
            "js/twitch_api_client.js",
            "js/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "32": "images/icon32.png"
        },
        "default_title": "Twitch Emote Timeline"
    },
    "content_scripts": [
    {
        "matches" : ["*://www.twitch.tv/videos/*"],
        "js": [
            "js/content.js",
            "lib/d3.v5.min.js"
        ],
        "css": ["css/style.css"],
        "all_frames": true
    }
    ],
    "manifest_version": 2
  }
